<h1>List of Photos</h1>
<a href="http://localhost:3000/new_photo_form">Add a New Photo</a>

<table>
  <tr>
    <th>Thumbnail</th>
    <th>Caption</th>
    <th colspan="3">Actions</th>
  </tr>
<% @list_of_photos.each do |photo| %>
  <tr>
    <td>
      <img src="<%= photo.source %>" width="80">
    </td>
    <td>
      <%= photo.caption %>
    </td>
    <td>
      <a href="http://localhost:3000/photo_details/<%= photo.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/edit_photo_form/<%= photo.id %>">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_photo/<%= photo.id %>">Delete</a>
    </td>
  </tr>
<% end %>
</table>
