<form action="http://localhost:3000/update_photo/<%= @the_id %>">
  <div>
    <label for="photo_id">ID:</label>
    <input id="photo_id" type="text" name="the_id" value="<%= @the_id %>">
  </div>
  <div>
    <label for="photo_image_url">Image URL:</label>
    <input id="photo_image_url" type="text" name="the_source" value="<%= @the_one_photo %>">
  </div>
  <div>
    <label for="photo_image_url">Caption:</label>
    <input id="photo_image_url" type="text" name="the_caption" value="<%= @the_one_caption %>">
  </div>
  <div>
    <input type="submit" value="Save Info">
  </div>
</form>
